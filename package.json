{
    "name": "carte-culture-et-developpement",
    "version": "0.1.0",
    "description": "Une carte HTML pour visualiser les projets pass√©s et en cours",
    "main": "index.js",
    "scripts": {
        "dev": "parcel src/index.html",
        "build": "parcel build src/index.html",
        "__compile:ts": "tsc -p tsconfig.release.json",
        "__compile:ts:watch": "tsc -w -p tsconfig.release.json",
        "format": "prettier \"src/**\" \"./*.js\" --write",
        "__format:debug": "prettier \"src/**\" --list-different",
        "lint": "eslint src/**/*",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "lint-staged": {
        "src/*.ts": [
            "npm run format",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run test",
            "pre-push": "npm run test:coverage"
        }
    },
    "eslintConfig": {
        "extends": [
            "airbnb-base",
            "prettier",
            "prettier/@typescript-eslint"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": "tsconfig.json"
        }
    },
    "devDependencies": {
        "@types/jest": "^25.1.2",
        "@types/leaflet": "^1.5.8",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
        "@typescript-eslint/parser": "^2.19.2",
        "autoprefixer": "^9.7.4",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "jest-css-modules": "^2.1.0",
        "lint-staged": "^10.0.7",
        "parcel-bundler": "^1.12.4",
        "postcss-import": "^12.0.1",
        "prettier": "^1.19.1",
        "stylelint-config-recommended": "^3.0.0",
        "stylus": "^0.54.7",
        "ts-jest": "^25.2.0",
        "typescript": "^3.7.5"
    },
    "dependencies": {
        "leaflet": "^1.6.0",
        "tailwindcss": "^1.2.0"
    }
}
