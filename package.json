{
    "name": "carte-culture-et-developpement",
    "version": "0.1.0",
    "description": "Une carte HTML pour visualiser les projets pass√©s et en cours",
    "scripts": {
        "dev": "parcel src/index.html",
        "build": "parcel build src/index.html",
        "__compile:ts": "tsc -p tsconfig.release.json",
        "__compile:ts:watch": "tsc -w -p tsconfig.release.json",
        "format": "prettier \"src/**\" --write",
        "__format:debug": "prettier \"src/**\" --list-different",
        "lint": "tslint --format stylish --project tsconfig.json",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "lint-staged": {
        "src/*.ts": [
            "npm run format",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run test",
            "pre-push": "npm run test:coverage"
        }
    },
    "devDependencies": {},
    "dependencies": {
        "@types/jest": "^25.1.2",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "lint-staged": "^10.0.7",
        "parcel-bundler": "^1.12.4",
        "prettier": "^1.19.1",
        "ts-jest": "^25.2.0",
        "tslint": "^6.0.0",
        "tslint-config-airbnb": "^5.11.2",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.7.5"
    }
}
